algoritmo "SistemaAlunos"
//Variaveis
///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
var
MAX:inteiro
nome:vetor[1..4] de caractere
cpf:vetor[1..4] de inteiro
nota1:vetor[1..4] de real
nota2:vetor[1..4] de real
anoingresso:vetor[1..4] de inteiro

aux1, aux2:inteiro
float1, float2:logico
///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//Tela de Opcoes
///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
procedimento telaDeOpcoes
var
opcao:inteiro
inicio
opcao <- 100
enquanto (opcao <0) ou (opcao >4 ) faca
   limpatela
   escreval("1 - Cadastro")
   escreval("2 - Consulta")
   escreval("3 - Alteracao")
   escreval("4 - Exclusao")
   escreval("0 - Sair")
   escreval("----------------------")
   escreval("Digite sua opcao:")
   leia(opcao)
fimenquanto

ESCOLHA opcao
caso 1
   cadastro
caso 2
   consulta
caso 3
   alteracao
caso 4
   exclusao
caso 5
   sair
fimescolha
fimprocedimento
///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//Procurar proximo livre
///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
funcao proximoLivre():inteiro

var
aux,i:inteiro
achou:logico

inicio

achou <- falso
i <- 1
enquanto (i <= MAX) e (nao achou) faca
   se nome[i] = "" entao
      achou <- verdadeiro
      aux <- i
   fimse
   i <- i + 1
fimenquanto

se (nao achou) entao
   aux <- (-1)
fimse
retorne aux

fimfuncao
///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//Leitura dos dados
///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
procedimento leituraDeDados(i:inteiro)

var
resposta:logico

inicio

se (i < 1) ou (i > MAX) entao
   resposta <- falso
senao
   limpatela
   escreva("Digite o nome.....:")
   leia(nome[i])
   escreva("Digite o CPF......:")
   leia(cpf[i])
   escreva("Digite a Nota 1...:")
   leia(nota1[i])
   escreva("Digite a Nota 2...:")
   leia(nota2[i])
   escreva("Digte o Ano de Ingresso..:")
   leia(anoingresso[i])
   resposta <-  verdadeiro
fimse

fimprocedimento
///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//Imprimir a tabela selecionada
///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
procedimento imprimeUM(i:inteiro)

inicio

escreval ("Nome:",nome[i])
escreval ("CPF:",cpf[i])
escreval ("Nota 1:",nota1[i])
escreval ("Nota 2:",nota2[i])
escreval ("Ano ingresso",anoingresso[i])

fimprocedimento
///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//Imprimir toda a tabela
///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
procedimento imprimiteTUDO

var
i: inteiro

inicio

para i 1 ate 4 faca
   imprimeUM(i)
fimpara

fimprocedimento
///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//Fazer cadastro
///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
procedimento cadastro

var
i:inteiro

inicio

i <- proximoLivre()
se (i = (-1) entao
   escreval("Arquivo cheio! Pressione qualquer tecla.")
   leia (aux)
senao
   leituradedados (i)
fimse

fimprocedimento
///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//Consultar nomes
///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
funcao buscaNome(nomeX:caractere):inteiro

var
i: inteiro
achou: logico
inicio

se (nome[i] = nomeX) entao
   posicao <- i
senao
   i <- 1
   enquanto (nome[i] <> nomeX) e (i < MAX) faca
   fimenquanto   i<- 1+i
fimse

fimfuncao
///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
inicio
MAX <- 4 //tamanho do vetor

TelaDeOpcoes
leituradedados(1)
leituradedados(3)
imprimeum(3)
fimalgoritmo
